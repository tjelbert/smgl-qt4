depends -sub CXX gcc  &&
depends cmake    &&

case $SPELL in
  kdebase4-runtime) 
               depends kdelibs      &&
               depends kdepimlibs   &&
               depends phonon
               ;;

  kdepimlibs)
               depends  kdelibs
               ;;

  kdepim4-runtime)
               depends  kdelibs &&
               depends  kdepimlibs  &&
               depends  kdebase4-runtime  &&
               depends  phonon
               ;;

  kdebase-workspace4)
               depends  kdebase4-runtime &&
               depends  kdelibs          &&
               depends  xorg-server
               ;;

  kdebindings4)
               depends  kdelibs &&
               depends  qimageblitz &&
               depends  attica
               ;;

  *)           depends kdebase4-runtime &&
               optional_depends kdebase-workspace4 '' '' 'kde desktop'
               ;;
esac
