default_build() {
  qt4_cmake_build
}

function default_install() {
 cmake_install
}

# we need a default_final, default_post_remove
# so that the mime  databases get updated
update_databases() {

  if [[ -x /usr/bin/update-mime-database ]]; then
    update-mime-database $INSTALL_ROOT/usr/share/mime/
  fi
}

default_final() {
  update_databases
}


default_post_remove() {
  update_databases
}

